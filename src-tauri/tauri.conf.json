{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "expense_tracker_v2",
  "version": "0.1.0",
  "identifier": "com.nrcms.expense-tracker-v2",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Expense Tracker",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "description": "all default capabilities for all windows",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "opener:default",
            "store:default",
            "core:webview:allow-create-webview-window",
            "core:event:allow-listen",
            "dialog:allow-open",
            "dialog:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
